<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

    <LinearLayout
            android:id="@+id/image_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

            <ImageView
                    android:id="@+id/img_portrait1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/frame_bg"
                    android:scaleType="fitXY" />

            <Button
                    android:id="@+id/btn_selectimg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="选择第一张图片" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

            <ImageView
                    android:id="@+id/img_portrait2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/frame_bg"
                    android:scaleType="fitXY" />

            <Button
                    android:id="@+id/btn_selectimg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="选择第二张图片" />

        </LinearLayout>

    </LinearLayout>


    <Button
            android:id="@+id/btn_one2onecompare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_panel"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="开始比对" />


</RelativeLayout>